package com.vrocketz.spotchu.views.adapter;

import org.json.JSONArray;
import org.json.JSONException;

import com.vrocketz.spotchu.helper.Config;

import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.ImageButton;
import android.widget.ImageView;
import android.widget.TextView;

public class MySpotsListAdapter extends BaseAdapter{
	
	private JSONArray spots;
	
	public MySpotsListAdapter(){
		
	}
	
	public MySpotsListAdapter(JSONArray spots){
		this.spots = spots;
	}
	
	public void setSpots(JSONArray spots){
		this.spots = spots;
	}

	@Override
	public int getCount() {
		// TODO Auto-generated method stub
		return spots.length();
	}

	@Override
	public Object getItem(int position) {
		// TODO Auto-generated method stub
		try {
			return spots.get(position);
		} catch (JSONException e) {
			if (Config.DEBUG)
				e.printStackTrace();
			return null;
		}
	}

	@Override
	public long getItemId(int position) {
		return position + 1;
	}

	@Override
	public View getView(int pos, View convertView, ViewGroup parent) {
		View view;
		ViewHolder holder;
		return null;
	}
	
	private class ViewHolder {
		ImageView img;
		TextView title, time;
		ImageButton retry;
	}


}
